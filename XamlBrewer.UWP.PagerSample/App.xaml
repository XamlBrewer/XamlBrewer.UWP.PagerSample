<Application x:Class="XamlBrewer.UWP.PagerSample.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:XamlBrewer.UWP.PagerSample"
             RequestedTheme="Light">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->
                <ResourceDictionary Source="/Controls/FlipViewIndicator.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!-- Other app resources here -->
            <Color x:Key="SystemAccentColor">Brown</Color>
            <SolidColorBrush x:Key="SystemAccentColorBrush"
                             Color="{StaticResource SystemAccentColor}" />
        </ResourceDictionary>
    </Application.Resources>

</Application>
